# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                               controllers.Application.index

# Home page
GET     /                               controllers.Application.index

# Users
GET     /users                          controllers.Users.index
GET     /users/new                      controllers.Users.showCreationForm
POST    /users/new                      controllers.Users.create
GET     /agenda						    controllers.Application.showAgenda

# Groups
GET     /groups                         controllers.Users.showGroups
POST    /groups/new                     controllers.Users.addGroup
POST    /groups/addUsertoGroup          controllers.Users.addUsertoGroup
# Events
GET     /events                         controllers.Events.index
GET     /events/reminders               controllers.Events.showReminders
GET     /events/new                     controllers.Events.showCreationForm
POST    /events/new                     controllers.Events.create
GET     /events/:eventID                controllers.Events.showEvent(eventID)
POST    /events/addreminder/:eventID    controllers.Events.addReminder(eventID)
POST    /events/addrule/:eventID        controllers.Events.addRule(eventID)


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file                   controllers.Assets.at(path="/public", file)
